{
  "app-id": "io.github.zweigs.imcar",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "command": "imcar",
  "branch": "stable",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc",
    "--share=network",
    "--filesystem=home",
    "--device=usb"
  ],
  "modules": [
    {
      "name": "imcar",
      "buildsystem": "simple",
      "build-commands": [
        "python -m venv /app",
        "source /app/bin/activate && pip3 install --no-cache-dir ."
      ],
      "build-options": {
        "build-args": [
          "--share=network"
        ]
      },
      "build-dependencies": [
        "python3-pip"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}